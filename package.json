{
  "private": true,
  "packageManager": "bun@1.3.2",
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "bench": "turbo run bench",
    "bench:regress": "vitest bench --run -t '#regress' --no-file-parallelism",
    "verify": "bunx turbo run lint test --only --log-order grouped"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.8",
    "@codspeed/vitest-plugin": "^5.0.1",
    "@testing-library/react-hooks": "^8.0.1",
    "@types/react": "^16.14",
    "@vitest/coverage-v8": "^4.0.16",
    "jsdom": "^27.3.0",
    "react": "^16.14",
    "react-dom": "^16.14",
    "tsup": "^8.0.0",
    "turbo": "^2.7.2",
    "typescript": "^5.0.0",
    "vitest": "^3.2.4"
  },
  "author": "einouqo",
  "license": "MIT"
}

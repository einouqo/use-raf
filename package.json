{
  "private": true,
  "packageManager": "bun@1.3.2",
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "prepare": "husky",
    "build": "turbo run build --log-order grouped",
    "lint": "turbo run lint --log-order grouped",
    "test": "turbo run test --log-order grouped",
    "verify": "bunx turbo run lint test --log-order grouped",
    "ci:codecov:test": "vitest run --coverage --reporter junit --outputFile './test-report.junit.xml'",
    "ci:codspeed:regress": "vitest bench --run -t '#regress' --no-file-parallelism",
    "publish": "turbo run publish --concurrency 1 --log-order grouped"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.8",
    "@codspeed/vitest-plugin": "^5.0.1",
    "@commitlint/cli": "^20.3.0",
    "@commitlint/config-conventional": "^20.3.0",
    "@testing-library/react-hooks": "^8.0.1",
    "@types/react": "^16.14",
    "@vitest/coverage-v8": "^3.2.4",
    "husky": "^9.1.7",
    "jsdom": "^27.3.0",
    "react": "^16.14",
    "react-dom": "^16.14",
    "tsup": "^8.0.0",
    "turbo": "^2.7.2",
    "typescript": "^5.0.0",
    "vitest": "^3.2.4"
  },
  "author": "einouqo",
  "repository": {
    "type": "git",
    "url": "https://github.com/einouqo/use-raf"
  },
  "license": "MIT"
}
